#
# bspwm hotkeys
#

super + ctrl + q
	bspc quit

alt + shift  + q
	bspc window -c

super + t
	bspc desktop -l next

super + b
	bspc desktop -B

alt + {s,f}
	bspc window -t {floating,fullscreen}

super + {grave,Tab}
	bspc {window,desktop} -f last

super + apostrophe
	bspc window -s last

super + {o,i}
	bspc control --record-history off; \
	bspc window {older,newer} -f; \
	bspc control --record-history on

super + y
	bspc window -w last.manual

super + m
	bspc window -s biggest

super + {_,shift + }{h,j,k,l}
	bspc window -{f,s} {left,down,up,right}

alt + shift + {c,v}
	bspc window -f {next,prev}

super + {comma,period}
	bspc desktop -C {back}ard,forward}

super + ctrl + {h,j,k,l}
	bspc window -p {left,down,up,right}

super + ctrl + {_,shift + }space
	bspc {window -p cancel,desktop -c}

alt + {h,j,k,l}
	bspc window -e {left -10,down +10,up -10,right +10}

alt + shift + {h,j,k,l}
	bspc window -e {right -10,up +10,down -10,left +10}

super + ctrl + {1-9}
	bspc window -r 0.{1-9}

super + {_,shift + }{1-9,0}
	bspc {desktop -f,window -d} ^{1-9,10}

~button1
	bspc pointer -g focus

super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

Print 
	scrot -q 100

shift + /
	pkill ffmpeg

#
# volume / ncmpcpp
#

alt + F5
	mpc pause

alt + F5 + shift 
	mpc play

alt + F4 
	mpc prev

alt + F6 
	mpc next

alt + F2 
	amixer set Master 10%-

alt + F3
	amixer set Master 10%+

#
# Xdotool status toggler
#

ctrl + 1
	dzen_cal_click

ctrl + 2
	dzen_bat_click 

ctrl + 3
	dzen_todo_click

ctrl + 4
	dzen_pac_click

#
# Brightness
#

alt + F11
	xbacklight -dec 20

alt + F12
	xbacklight -inc 20

#
# Window gap
#

super + shift + u 
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` + 2))

super + u
        bspc config -d focused window_gap $((`bspc config -d focused window_gap` - 2))

#
# Padding
#

super + shift + y
        new_size=$((`bspc config -d focused top_padding` + 2)); \
        bspc config -d focused top_padding $new_size; \
        bspc config -d focused right_padding $new_size; \
        bspc config -d focused bottom_padding $new_size; \
        bspc config -d focused left_padding $new_size;

super + ctrl + y
        new_size=$((`bspc config -d focused top_padding` - 2)); \
        bspc config -d focused top_padding $new_size; \
        bspc config -d focused right_padding $new_size; \
        bspc config -d focused bottom_padding $new_size; \
        bspc config -d focused left_padding $new_size;

#
# wm independent hotkeys
#

alt + Return
	urxvt

alt + d
	dmenu_run -fn tewi-8 -l 4 -nb "#0e1116" -sb "#222222" -x 520 -y 340 -w 300 -h 20 -p ">  "  

#
# make sxhkd reload its configuration files:
#

alt + shift + r
	pkill -USR1 -x sxhkd

#
# Rotate leaves of tree
#

alt + shift + {comma,period}
	bspc desktop -R {90,270}

#
# Toggle Pseudotile
#

alt + shift + space
	bspc window -t pseudo_tiled

#
# Focus on floating / tiled
#

alt + e
	bspc window -f {next.floating,next.tiled}

#
# Change window padding
#

alt + {_, shift} + bracketright
	bspc config -d focused right_padding $((`bspc config -d focused right_padding` {+,-} 20 ))

alt + {_, shift} + bracketleft
	bspc config -d focused left_padding $((`bspc config -d focused left_padding` {+,-} 20 ))

ctrl + {_, shift} + bracketright
	bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` {+,-} 20 ))

ctrl + {_, shift} + bracketleft
	bspc config -d focused top_padding $((`bspc config -d focused top_padding` {+,-} 20 ))


alt + shift + {minus,equal}
	bspc config -d focused right_padding $((`bspc config -d focused right_padding` {+,-} 20 )); \
	bspc config -d focused left_padding $((`bspc config -d focused left_padding` {+,-} 20 )); \
	bspc config -d focused bottom_padding $((`bspc config -d focused bottom_padding` {+,-} 20 )); \
	bspc config -d focused top_padding $((`bspc config -d focused top_padding` {+,-} 20 ));

#
# Set Splitting ratio of windows
#

alt + ctrl + {1-9}
	bspc window -r 0.{1-9}

#
# Run shit
#

alt + shift + d
	bspc create_frame

alt + shift + Return
	bspc rule -a urxvt -o pseudo_tiled=on
